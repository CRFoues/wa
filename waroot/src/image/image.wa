import "image/color"

// 图像大小
type Config struct {
	Width, Height: int
}

// 图像接口
type Image interface {
	Bounds() => Rectangle
	PixOffset(x, y: int) => int
	At(x, y: int) => color.RGBA
}

// 二维图像 Gray
type Gray struct {
	Pix:    []u8
	Stride: int
	Rect:   Rectangle
}

// 二维图像 RGBA
type RGBA struct {
	Pix:    []u8
	Stride: int
	Rect:   Rectangle
}

// 调色板图像
type Paletted struct {
	Pix:     []u8
	Stride:  int
	Rect:    Rectangle
	Palette: []color.RGBA
}
